# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Start page
GET     /                                   controllers.Start.present

# Customers
GET     /customer-repository                controllers.CustomerRepository.present
GET     /customer-repository                controllers.CustomerRepository.newCustomer
POST    /customer-repository/:id/delete     controllers.CustomerRepository.deleteCustomer(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)